{
  "name": "learn-n-grow",
  "version": "1.0.0",
  "description": "Decentralized application for online courses",
  "author": "DavNej",
  "license": "MIT",
  "scripts": {
    "compile": "SKIP_TASKS_LOAD=true hardhat clean && SKIP_TASKS_LOAD=true hardhat compile",
    "deploy": "hardhat deploy",
    "dev": "yarn compile && yarn deploy && hardhat node",
    "seed:comments": "hardhat seed-comments --network local",
    "seed:posts": "hardhat seed-posts --network local",
    "seed:profiles": "hardhat seed-profiles --network local",
    "seed": "yarn seed:profiles && yarn seed:posts && yarn seed:comments",
    "test": "hardhat test"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.8.1",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "dotenv": "^16.0.3",
    "ethers": "^5.4.7",
    "glob": "^8.1.0",
    "hardhat": "^2.12.5",
    "hardhat-deploy": "^0.11.22",
    "hardhat-gas-reporter": "^1.0.8",
    "rimraf": "^4.1.0",
    "solidity-coverage": "^0.8.0",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
